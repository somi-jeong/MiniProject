@model VocaMvc.Models.Voca

@{
    ViewData["Title"] = "Delete";
}

<h1 style="background-color:#f33513; color:white; font-weight:500">単語帳-削除</h1>

<div>

    <hr />
    <dl class="row">

        <dd class="col-sm-10" style="display:none">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Word)
        </dd>


        <dd class="col-sm-10">
            作成日: @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>

        <dd class="col-sm-10">
            更新日: @Html.DisplayFor(model => model.EditDate)
        </dd>


        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meaning)
        </dd>
    </dl>

</div>

<div class="form-group" style="float:left;">
    <a asp-action="Index" class="btn btn-primary" style="display: block; background-color: #f33513; width:70px">戻る</a>
</div>
<div class="form-group" style="float:left;">
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary" style="display: block; background-color: #f33513; width:70px">確定</a>
</div>
